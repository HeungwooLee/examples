{
  "allowSyntheticDefaultImports": true,
  "baseUrl": ".",
  "outDir": "dist",
  "module": "esnext",
  "target": "es5",
  "lib": ["es6", "dom"],
  "sourceMap": true,
  "allowJs": true,
  "moduleResolution": "node",
  "rootDir": "script",
  "forceConsistentCasingInFileNames": true,
  "noImplicitReturns": true,
  "noImplicitThis": true,
  "noImplicitAny": true,
  "strictNullChecks": true,
  "suppressImplicitAnyIndexErrors": true,
  "noUnusedLocals": true,
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
